@if (User.Identity.IsAuthenticated)
{
    <div class="leave-comment-form mt-5" id="reply">
        <h4 class="side-title mb-2">Bir Yorum Bırakın</h4>
        <p class="mb-4">İşaretli alanları doldurmanız gerekmektedir.</p>

        <!-- Hata mesajlarını göster -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @Html.ValidationSummary()
            </div>
        }

        <form method="post" asp-action="AddComment" asp-controller="Comment">
            <input type="hidden" name="destinationID" value="@ViewBag.destID" />
            <div class="form-group">
                <textarea name="Content" class="form-control" placeholder="Yorumunuz*" required=""
                          spellcheck="false"></textarea>
            </div>
            <div class="submit text-right">
                <button class="btn btn-style btn-primary" type="submit" id="btnsave">Yorum Yap</button>
            </div>
        </form>
    </div>
}
else
{
    <div class="alert alert-warning" role="alert">
        Yorum yapabilmek için üye olmanız gerekli. Lütfen giriş yapın veya kayıt olun.
    </div>
}

<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
