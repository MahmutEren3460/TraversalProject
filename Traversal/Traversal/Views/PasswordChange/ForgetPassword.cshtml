@using DTOLayer.DTOs.PasswordDTOs;
@model ForgetPasswordDTO
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
        max-width: 500px;
        margin-top: 50px;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .form-control {
        margin-bottom: 15px;
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        border-radius: 5px;
        width: 100%;
    }

    h2 {
        margin-bottom: 20px;
        color: #333;
    }

    .text-muted {
        color: #6c757d;
        font-size: 14px;
    }

    .alert {
        margin-bottom: 20px;
        border-radius: 5px;
    }
</style>

<div class="container">
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-success" role="alert">
            @ViewBag.Message
        </div>
    }

    <h2 class="text-center">Şifre Yenileme</h2>
    <p class="text-muted text-center">Lütfen şifrenizi yenilemek için e-posta adresinizi giriniz.</p>
    <form method="post">
        <div class="form-group">
            <label for="email">Mail Adresi</label>
            <input type="email" class="form-control" id="email" asp-for="Mail" placeholder="örnek@domain.com" required>
        </div>
        <button type="submit" class="btn btn-primary">Şifre Yenileme Linki Gönder</button>
    </form>
</div>
