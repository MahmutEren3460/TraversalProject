@using EntityLayer.Concrete
@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    img {
        border-radius: 50%;
    }
</style>

<h2>Rotalar</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Şehir</th>
        <th>Fiyat</th>
        <th>Kapasite</th>
        <th>Resim</th>
        <th>Sil</th>
        <th>Güncelle</th>        
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.DestinationID</td>
            <td>@item.city</td>
            <td>$@item.Price</td>
            <td>@item.Capacity</td>
            <td>
                <img src="@item.Image" alt="Site Resmi" width="60" height="60" />
            </td>
            <td><a href="/Admin/AdminDestination/DeleteDestination/@item.DestinationID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/AdminDestination/UpdateDestination/@item.DestinationID" class="btn btn-outline-success">Güncelle</a></td>           
        </tr>
    }
</table>
<a href="/Admin/AdminDestination/AddDestination/" class="btn btn-outline-info">Yeni Rota Ekle</a>

